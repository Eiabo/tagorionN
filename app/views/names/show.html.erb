<div class="container">

<div class="page-header" id="banner">
    <div class="row">
          <div class="col-lg-8 col-md-7 col-sm-6">
          	<br>
            <h1><%= @name.namalengkap %></h1>
          </div>
    </div>
</div>

<div class="jumbotron">
	<div class="container">
      <div class="row">
        <div class="col-md-5">
        	<%= image_tag "#{@name.npm}.jpg", size:"354x433" %>
        </div>

        <div class="col-md-7">
        	<h2><strong>Tags:</strong></h2>
			<% @name.tags.each do |tag| %>
			<h3><%= tag.tagtext %></h3><p style="font-size: 0.9em;"><i>tagged by <%= tag.tagger %></i><%= link_to '.', [tag.name, tag],
               method: :delete,
               data: { confirm: 'Are you sure?' } %></p>
			<% end %>
        </div>
		</div>
	</div>
</div>

<h2>Add a tag:</h2>
<p>Tolong tulis juga nama yg add tag ke "Tagger."</p>
<%= form_for([@name, @name.tags.build]) do |f| %>
	<p>
		<%= f.label :tagger %><br>
		<%= f.text_field :tagger %>
	</p>
	<p>
		<%= f.label "Tag" %><br>
		<%= f.text_area :tagtext %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<br>
<br>
<p>Tags as String:</p>

<div class="panel panel-default">
  <div class="panel-body">
    <% @name.tags.each do |tag| %>
	<%= tag.tagtext %>,
	<% end %>
  </div>
</div>

<footer>
    <div class="row">
        <div class="col-lg-12">
            <ul class="list-unstyled">
    		  <li><br></li>
    		  <li><br></li>
              <li><a href="#top">Back to top</a></li>
              <li><%= link_to 'Back', names_path %></li>
              <li><%= link_to 'Edit', edit_name_path(@name) %></li>
              <li><br></li>
            </ul>
            <p>Made by George A.P. with Ruby on Rails</p>
         </div>
    </div>
</footer>

</div>